{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "parksmap-pipeline-template"
    },
    "objects": [
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "parksmap-pipeline"
            },
            "spec": {
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${REPO}"
                    }
                },
                "strategy": {
                    "type": "JenkinsPipeline",
                    "jenkinsPipelineStrategy": {
                        "jenkinsfilePath": "ParksMap/Jenkinsfile",
                        "env": [
                            {
                                "name": "GUID",
                                "value": "${GUID}"
                            },
                            {
                                "name": "CLUSTER",
                                "value": "${CLUSTER}"
                            }
                        ]
                    }
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "REPO",
            "displayName": "REPO",
            "description": "repo",
            "value": "https://github.com/pedrojoselago/NationalParksApp.git",
            "required": true
        },
        {
            "name": "GUID",
            "displayName": "GUID",
            "description": "guid",
            "value": "0e25",
            "required": true
        },
        {
            "name": "CLUSTER",
            "displayName": "CLUSTER",
            "description": "cluster",
            "value": "na39.openshift.opentlc.com",
            "required": true
        }
    ]
}